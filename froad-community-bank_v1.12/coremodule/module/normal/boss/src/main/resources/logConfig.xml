<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">
     
    <property name="USER_HOME" value="/data/ubank/logs/web/${PROJECT_NAME}" />
    <property name="PORT" value="${TOMCAT_PORT}"/>
    <property name="MaxSize" value="512mb" /> <!-- support kb、mb、gb  -->
    <property name="ROOT_LEVEL" value="${LOG_LEVEL}"/>
    
    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
	    <encoder> 
	    	<pattern>%d{yyyyMMdd HH:mm:ss SSS}[%thread][%level]-%msg%n</pattern> 
	    </encoder> 
    </appender>
    
    
    <!-- debug 开发使用 -->  
    <appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${USER_HOME}/${PROJECT_NAME}_${PORT}_debug.log</File>   
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        	<fileNamePattern>${USER_HOME}/${PROJECT_NAME}_${PORT}_%d{yyyyMMdd}_debug_%i.log</fileNamePattern>
        	<maxHistory>30</maxHistory>
        	<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>${MaxSize}</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <layout>
            <Pattern>%d{yyyyMMdd HH:mm:ss SSS}[%thread][%level]-%msg%n</Pattern>
        </layout>
    </appender>
   
    <!-- =========================================公用配置Start=============================== -->
     <appender name="DEFAULT-INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${USER_HOME}/${PROJECT_NAME}_${PORT}_info.log</File>   
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter"> 
	        <evaluator> 
	        	<expression>
	        		(level>=DEBUG)
	        	</expression> 
	        </evaluator> 
	        <OnMatch>ACCEPT</OnMatch>
        	<OnMismatch>DENY</OnMismatch> 
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        	<fileNamePattern>${USER_HOME}/${PROJECT_NAME}_${PORT}_%d{yyyyMMdd}_info_%i.log</fileNamePattern>
        	<maxHistory>30</maxHistory>
        	<TimeBasedFileNamingAndTriggeringPolicy	class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>${MaxSize}</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <layout>
            <Pattern>%d{yyyyMMdd HH:mm:ss SSS}[%thread][%level]-%msg%n</Pattern>
        </layout>
    </appender>
    
    
    <appender name="DEFAULT-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${USER_HOME}/${PROJECT_NAME}_${PORT}_error.log</File>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter"> 
	        <evaluator> 
	        	<expression>
	        		(level==ERROR)
	        	</expression> 
	        </evaluator> 
	        <OnMatch>ACCEPT</OnMatch>
        	<OnMismatch>DENY</OnMismatch> 
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        	<fileNamePattern>${USER_HOME}/${PROJECT_NAME}_${PORT}_%d{yyyyMMdd}_error_%i.log</fileNamePattern>
        	<maxHistory>30</maxHistory>
        	<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>${MaxSize}</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <layout>
            <Pattern>%d{yyyyMMdd HH:mm:ss SSS}[%thread][%level]-%msg%n</Pattern>
        </layout>
    </appender>
    
    <!-- =========================================公用配置End=============================== -->
    
    <root level="${ROOT_LEVEL}">
        	
     <appender-ref ref="DEFAULT-ERROR"/>
     <appender-ref ref="DEFAULT-INFO"/>
     
       <!--
     <appender-ref ref="DEBUG"/>
      -->
     <appender-ref ref="STDOUT"/>
     
    </root>
</configuration>

