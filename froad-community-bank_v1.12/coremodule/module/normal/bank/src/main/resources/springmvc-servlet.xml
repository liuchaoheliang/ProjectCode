		</mvc:message-converters>
	</mvc:annotation-driven>
	
	<context:annotation-config />
	
	<context:component-scan base-package="com.froad.cbank.coremodule" name-generator="com.froad.cbank.coremodule.framework.web.basic.spring.SdpAnnotationBeanNameGenerator"/>
	
