<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.db.bps.mappers.BankOperatorRoleMapper">
	<resultMap type="BankOperatorRole" id="bankOperatorRoleResultMap">
		<id column="OPERATOR_ID" property="operatorId" />
		<result column="ROLE_ID" property="roleId" />
		<result column="STATUS" property="status" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="UPDATE_TIME" property="updateTime" />
	</resultMap>
	
	<select id="findRoleByOperatorId" parameterType="java.lang.Long" resultType="java.lang.Long">
		select ROLE_ID from tr_bank_operator_role where OPERATOR_ID=#{operatorId}
	</select>
	
	<select id="findAll" resultMap="bankOperatorRoleResultMap">
		select OPERATOR_ID,ROLE_ID,STATUS,CREATE_TIME,UPDATE_TIME from tr_bank_operator_role
	</select>
	
</mapper>