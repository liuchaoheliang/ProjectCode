<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.db.chongqing.mappers.PaymentChannelMapper">

	<resultMap type="PaymentChannel" id="paymentChannelResultMap">
    	<!-- baseEntity prop -->
        <id property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
		<!-- baseEntity prop -->
		<result property="name" column="name"/>
		<result property="fullName" column="full_name"/>
		<result property="type" column="type"
		typeHandler="com.froad.db.extend.EnumTypeHandler"/>
		<result property="icoUrl" column="ico_url"/>
		<result property="orgNo" column="org_no"/>
		<result property="isEnabled" column="is_enabled"/>
		<result property="isFroadCheckToken" column="is_froad_check_token"/>
    </resultMap>
    
    <!-- 基础sql 数据新增 必须指明数据列  -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into cb_payment_channel
		(create_time,update_time,name,full_name,type,ico_url,org_no,is_enabled,is_froad_check_token)
		values
		(
			#{createTime},#{updateTime},#{name},#{fullName},#{type,typeHandler=com.froad.db.extend.EnumTypeHandler},#{icoUrl},#{orgNo},#{isEnabled},#{isFroadCheckToken}
		)
	</insert>
	
	<!-- 基础sql 通过分页查询 -->
	<select id="selectOfPage" parameterType="com.froad.cbank.persistent.entity.base.PageEntity" resultMap="paymentChannelResultMap">
		select * from cb_payment_channel
		<where>
			<if test="condition != null">
				<if test="condition.name != null">
					and name like CONCAT('%',#{condition.name},'%' )
				</if>
				<if test="condition.fullName != null">
					and full_name like CONCAT('%',#{condition.fullName},'%' )
				</if>
				<if test="condition.type != null">
					and type = #{condition.type,typeHandler=com.froad.db.extend.EnumTypeHandler}
				</if>
				<if test="condition.icoUrl != null">
					and ico_url like CONCAT('%',#{condition.icoUrl},'%' )
				</if>
				<if test="condition.orgNo != null">
					and org_no = #{condition.orgNo}
				</if>
				<if test="condition.isEnabled != null">
					and is_enabled = #{condition.isEnabled}
				</if>
			</if>
		</where>
	</select>
	
	<!-- 基础sql 通过主键查询 -->
	<select id="selectById" parameterType="java.lang.Long" resultMap="paymentChannelResultMap">
		select * from cb_payment_channel where id = #{id}
	</select>
	
	<!-- 通过主键更新数据 -->
	<update id="updateById" parameterType="java.lang.Boolean" >
		update cb_payment_channel set update_time = #{updateTime}
		<if test="name != null">
			,name = #{name}
		</if>
		<if test="fullName != null">
			,full_name = #{fullName}
		</if>
		<if test="type != null">
			,type = #{type,typeHandler=com.froad.db.extend.EnumTypeHandler}
		</if>
		<if test="icoUrl != null">
			,ico_url = #{icoUrl}
		</if>
		<if test="orgNo != null">
			,org_no = #{orgNo}
		</if>
		<if test="isEnabled != null">
			,is_enabled = #{isEnabled}
		</if>
		<if test="isFroadCheckToken != null">
			,is_froad_check_token = #{isFroadCheckToken}
		</if>
		where id = #{id}
	</update>
	
	<select id="selectByCondition" resultMap="paymentChannelResultMap">
		select * from cb_payment_channel
		<where>
			<if test="name != null">
				and name like CONCAT('%',#{name},'%' )
			</if>
			<if test="fullName != null">
				and full_name like CONCAT('%',#{fullName},'%' )
			</if>
			<if test="type != null">
				and type = #{type,typeHandler=com.froad.db.extend.EnumTypeHandler}
			</if>
			<if test="icoUrl != null">
				and ico_url like CONCAT('%',#{icoUrl},'%' )
			</if>
			<if test="orgNo != null">
				and org_no = #{orgNo}
			</if>
			<if test="isEnabled != null">
				and is_enabled = #{isEnabled}
			</if>
		</where>
	</select>
    
    <select id="selectByClientId" resultMap="paymentChannelResultMap" parameterType="java.lang.Long">
		select * from cb_payment_channel where id in(
			select payment_channel_id from cb_client_payment_channel where client_id=#{clientId}
		)
	</select>
</mapper>