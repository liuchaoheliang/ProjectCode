<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.db.chonggou.mappers.MerchantUserMapperCG">

	<resultMap type="MerchantUserCG" id="merchantUserResultMap">
		<id property="id" column="id" />
		<result property="clientId" column="client_id" />
		<result property="createTime" column="create_time" />
		<result property="merchantId" column="merchant_id" />
		<result property="outletId" column="outlet_id" />
		<result property="merchantRoleId" column="merchant_role_id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="email" column="email" />
		<result property="phone" column="phone" />
		<result property="isRest" column="is_rest" />
		<result property="isDelete" column="is_delete" />
		<result property="realname" column="realname" />
		
		<!-- 商户表 -->
		<result property="merchantName" column="merchant_name" />
		<result property="merchantIsEnable" column="merchant_is_enable" />
		<result property="merchantDisableStatus" column="merchant_disable_status" />
		<result property="orgCode" column="org_code" />
		
		<!-- 门店表 -->
		<result property="outletName" column="outlet_name" />
	</resultMap>


	<!-- 添加  MerchantUser -->
	<insert id="addMerchantUser" parameterType="MerchantUserCG" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO cb_merchant_user (
				client_id,create_time,merchant_id,outlet_id,merchant_role_id,username,password,email,phone,is_rest,is_delete,realname
			) VALUES (
				#{clientId},#{createTime},#{merchantId},#{outletId},#{merchantRoleId},#{username},#{password},#{email},#{phone},#{isRest},#{isDelete},#{realname}
			) 
		]]>
	</insert>



	<!-- 删除  MerchantUser -->
	<delete id="deleteMerchantUser" >
		delete from cb_merchant_user where client_id = 'chongqing'
	</delete>




	<!-- 查询  MerchantUser -->
	<select id="findMerchantUserById" parameterType="java.lang.Long" resultMap="merchantUserResultMap">
		SELECT 
            u.id, u.create_time, u.client_id, u.merchant_id, u.outlet_id
            , u.merchant_role_id, u.username, u.password, u.email, u.phone
            , u.is_rest, u.is_delete, u.realname
            , m.merchant_name 
            , m.is_enable merchant_is_enable
            , m.disable_status  merchant_disable_status
            , m.org_code 
            , o.outlet_name 
        FROM cb_merchant_user u LEFT JOIN cb_merchant m ON u.merchant_id = m.merchant_id LEFT JOIN cb_outlet o ON o.outlet_id = u.outlet_id 
        WHERE 
            u.id = #{id}

	</select>
   


	

</mapper>

