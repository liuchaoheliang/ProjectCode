<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties url="file:./config/jdbc.properties"/>
	
	<!-- 指定结果集映射关系 -->
	<typeAliases>
	    <!-- common -->
		<typeAlias alias="Org" type="com.froad.po.Org" />
		<typeAlias alias="BankOperator" type="com.froad.po.BankOperator" />
		<typeAlias alias="BankOperateLog" type="com.froad.po.BankOperateLog" />
		<typeAlias alias="ProductGroup" type="com.froad.po.ProductGroup" />
		<typeAlias alias="ProductPresell" type="com.froad.po.ProductPresell" />
		<typeAlias alias="Area" type="com.froad.po.Area" />
		<typeAlias alias="Merchant" type="com.froad.po.Merchant" />
		<typeAlias alias="Product" type="com.froad.po.Product" />
		<typeAlias alias="ProductCategory" type="com.froad.po.ProductCategory" />
		<typeAlias alias="ProductSeckill" type="com.froad.po.ProductSeckill"/>
		<typeAlias alias="VipProduct" type="com.froad.po.VipProduct" />
		<typeAlias alias="ProductOutletInfo" type="com.froad.po.ProductOutletInfo" />
		<typeAlias alias="Client" type="com.froad.po.Client" />
		<typeAlias alias="BossMerchantCategory" type="com.froad.po.MerchantCategory" />
		
	    <!-- 商品 -->
		<typeAlias alias="ProductTemp" type="com.froad.po.ProductTemp" />
		<typeAlias alias="ProductOperateLog" type="com.froad.po.ProductOperateLog" />
		<typeAlias alias="VipProduct" type="com.froad.po.VipProduct" />
		<typeAlias alias="VipBindProductInfo" type="com.froad.po.VipBindProductInfo" />
		<!-- 商户门店 -->
		<typeAlias alias="Outlet" type="com.froad.po.Outlet" />
		
		<!-- 商户用户 -->
		<typeAlias alias="MerchantUser" type="com.froad.po.MerchantUser" />
		
		<!-- -->
		<typeAlias alias="MerchantAccount" type="com.froad.po.MerchantAccount" />
		
		
		<typeAlias alias="BossProductCategory" type="com.froad.po.ProductCategory" />
		
		<!-- 客户端相关 -->
		<typeAlias alias="ClientPaymentChannel" type="com.froad.po.ClientPaymentChannel" />
		<typeAlias alias="FunctionModule" type="com.froad.po.FunctionModule" />
		
		<!-- 推荐活动标签相关 -->
		<typeAlias alias="RecommendActivityTag" type="com.froad.po.RecommendActivityTag"/>
		<typeAlias alias="RecommendActivityCounter" type="com.froad.po.RecommendActivityCounter"/>
		<typeAlias alias="WeightActivityTag" type="com.froad.po.WeightActivityTag"/>
		<typeAlias alias="MerchantWeightActivityTag" type="com.froad.po.MerchantWeightActivityTag"/>
		<typeAlias alias="OutletWeightActivityTag" type="com.froad.po.OutletWeightActivityTag"/>
		<typeAlias alias="ProductWeightActivityTag" type="com.froad.po.ProductWeightActivityTag"/>
		
		
		
		<!-- 商户活动标签 -->
		<typeAlias alias="BusinessZoneTag" type="com.froad.po.BusinessZoneTag"/>
		
		<!-- 字典管理 -->
		<typeAlias alias="DictionaryCategory" type="com.froad.po.DictionaryCategory"/>
		<typeAlias alias="Dictionary" type="com.froad.po.Dictionary"/>
		<typeAlias alias="DictionaryItem" type="com.froad.po.DictionaryItem"/>
		
		
		<!-- 运单表 -->
		<typeAlias alias="Waybill" type="com.froad.po.Waybill"/>
		<!-- 物流公司 -->
		<typeAlias alias="DeliveryCorp" type="com.froad.po.DeliveryCorp"/>
		<!-- 供应商 -->
		<typeAlias alias="Provider" type="com.froad.po.Provider"/>
		
		
	</typeAliases>

	<!-- 分页拦截器 mysql or oracle -->
	<plugins>
		<plugin interceptor="com.froad.db.mysql.interceptor.PageInterceptor">
			<property name="databaseDialect" value="com.froad.db.mysql.dialet.MySQLDialect" />
			<property name="pageSqlIdRegEx" value=".*ByPage" />
		</plugin>
	</plugins>
	
	<!-- -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="com.froad.db.mysql.datasource.DruidDataSourceFactory">
				<property name="driverClassName" value="${jdbc.driverClassName}" />
				<property name="url" value="${jdbc.url}" />
				<property name="username" value="${jdbc.username}" />
				<property name="password" value="${jdbc.password}" />

				<!-- 配置初始化大小、最小、最大 -->
				<property name="initialSize" value="${pool.initialSize}" />
				<property name="minIdle" value="${pool.minIdle}" />
				<property name="maxActive" value="${pool.maxActive}" />

				<!-- 配置获取连接等待超时的时间 -->
				<property name="maxWait" value="${pool.maxWait}" />

				<property name="validationQuery" value="select now()" />
				<property name="testWhileIdle" value="true" />
				<property name="testOnBorrow" value="false" />
				<property name="testOnReturn" value="false" />
				<property name="poolPreparedStatements" value="false" />
				<property name="maxOpenPreparedStatements" value="-1" />

				<!-- 对于长时间不使用的连接强制关闭 -->
				<property name="removeAbandoned" value="true" />

				<!-- 超过30分钟开始关闭空闲连接 -->
				<property name="removeAbandonedTimeout" value="120" />

				<!-- 将当前关闭动作记录到日志 -->
				<property name="logAbandoned" value="true" />
			</dataSource>
		</environment>
	</environments>

	<!-- 指定mapper资源 -->
	<mappers>
	    <!-- common-->
		<mapper resource="mappers/MerchantCommonMapper.xml" />
		<mapper resource="mappers/ProductCommonMapper.xml" />
		<mapper resource="mappers/BankOperateLogCommonMapper.xml" />
		<mapper resource="mappers/BankOperatorCommonMapper.xml" />
		<mapper resource="mappers/OrgCommonMapper.xml" />
		<mapper resource="mappers/AreaCommonMapper.xml" />
		<mapper resource="mappers/ClientCommonMapper.xml" />
		<mapper resource="mappers/ProductCategoryCommonMapper.xml" />
		<mapper resource="mappers/WayBillCommonMapper.xml" />
		<mapper resource="mappers/ProviderCommonMapper.xml" />
		<!-- 商品 -->
		<mapper resource="mappers/ProductTempMapper.xml" />
		<mapper resource="mappers/ProductOperateLogMapper.xml" />
		<mapper resource="mappers/ProductMapper.xml" />
		<mapper resource="mappers/ProductCategoryMapper.xml" />
		<mapper resource="mappers/VipProductMapper.xml" />
		<!-- 商户门店 -->
		<mapper resource="mappers/OutletMapper.xml"  />
		<!-- 商户 -->
		<mapper resource="mappers/MerchantMapper.xml" />
		<!-- 商户用户 -->
		<mapper resource="mappers/MerchantUserMapper.xml"  />
		<!-- 地址 -->
		<mapper resource="mappers/AreaMapper.xml"  />
		
		<!-- Boss商品分类 -->
		<mapper resource="mappers/BossProductCategoryMapper.xml" />
		<!-- Boss商户分类 -->
		<mapper resource="mappers/BossMerchantCategoryMapper.xml" />
		
		<!-- 客户端相关 -->
		<mapper resource="mappers/ClientMapper.xml"  />
		<mapper resource="mappers/ClientPaymentChannelMapper.xml"  />
		<mapper resource="mappers/FunctionModuleMapper.xml"  />
		
		<!-- 推荐活动标签相关 -->
		<mapper resource="mappers/RecommendActivityTagMapper.xml" />
		<mapper resource="mappers/WeightActivityTagMapper.xml" />
		<!-- 推荐活动标签相关 -->
		<mapper resource="mappers/BusinessZoneTagMapper.xml" />
		<mapper resource="mappers/RecommendActivityCounterMapper.xml" />
		
		<!-- 字典管理 -->
		<mapper resource="mappers/DictionaryCategoryMapper.xml" />
		<mapper resource="mappers/DictionaryMapper.xml" />
		<mapper resource="mappers/DictionaryItemMapper.xml" />
		
		
		<!-- 物流公司 -->
		<mapper resource="mappers/DeliveryCorpMapper.xml" />
		
	</mappers>

</configuration>