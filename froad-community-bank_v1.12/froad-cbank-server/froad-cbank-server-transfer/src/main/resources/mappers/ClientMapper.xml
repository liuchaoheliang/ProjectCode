<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.db.chonggou.mappers.ClientMapper">

	<resultMap type="Client" id="clientResultMap">
		<id property="id" column="id" />
		<result property="createTime" column="create_time" />
		<result property="clientId" column="client_id" />
		<result property="uri" column="uri" />
		<result property="name" column="name" />
		<result property="pointPartnerNo" column="point_partner_no" />
		<result property="openapiPartnerNo" column="openapi_partner_no" />
		<result property="orderDisplay" column="order_display" />
		<result property="appkey" column="appkey" />
		<result property="appsecret" column="appsecret" />
		<result property="bankType" column="bank_type" />
		<result property="bankName" column="bank_name" />
		<result property="qrLogo" column="qr_logo" />
		<result property="returnUrl" column="return_url" />
		<result property="remark" column="remark" />
		<result property="bankId" column="bank_id" />
		<result property="settlePayOrg" column="settle_pay_org" />
	</resultMap>


	<!-- 添加  Client -->
	<insert id="addClient" parameterType="Client" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			insert into cb_client (
				create_time,client_id,uri,name,point_partner_no,openapi_partner_no,order_display,appkey,appsecret,bank_type,bank_name,qr_logo,return_url,remark,bank_id,settle_pay_org
			) values (
				#{createTime},#{clientId},#{uri},#{name},#{pointPartnerNo},#{openapiPartnerNo},#{orderDisplay},#{appkey},#{appsecret},#{bankType},#{bankName},#{qrLogo},#{returnUrl},#{remark},#{bankId},#{settlePayOrg}
			) 
		]]>
	</insert>


	<!-- 批量添加  Client -->
	<insert id="addClientByBatch" parameterType="java.util.List">
		insert into cb_client (
			create_time,client_id,uri,name,point_partner_no,openapi_partner_no,order_display,appkey,appsecret,bank_type,bank_name,qr_logo,return_url,remark,bank_id 
		) values 
		<foreach collection="clientList" item="item" index="index" separator=",">
			(#{createTime},#{clientId},#{uri},#{name},#{pointPartnerNo},#{openapiPartnerNo},#{orderDisplay},#{appkey},#{appsecret},#{bankType},#{bankName},#{qrLogo},#{returnUrl},#{remark},#{bankId})
		</foreach>
	</insert>

	<!-- 查询  Client -->
	<select id="findClient" parameterType="Client" resultMap="clientResultMap">
		select 
			id,create_time,client_id,uri,name,point_partner_no,openapi_partner_no,order_display,appkey,appsecret,bank_type,bank_name,qr_logo,return_url,remark,bank_id 
		from cb_client 
			<where>
				<if test="id != null">
					and id = #{id}
				</if>
				<if test="clientId != null">
					and client_id = #{clientId}
				</if>
				<if test="uri != null">
					and uri = #{uri}
				</if>
				<if test="createTime != null">
					and create_time = #{createTime}
				</if>
				<if test="clientId != null">
					and client_id = #{clientId}
				</if>
				<if test="name != null">
					and name = #{name}
				</if>
				<if test="pointPartnerNo != null">
					and point_partner_no = #{pointPartnerNo}
				</if>
				<if test="openapiPartnerNo != null">
					and openapi_partner_no = #{openapiPartnerNo}
				</if>
				<if test="orderDisplay != null">
					and order_display = #{orderDisplay}
				</if>
				<if test="appkey != null">
					and appkey = #{appkey}
				</if>
				<if test="appsecret != null">
					and appsecret = #{appsecret}
				</if>
				<if test="bankType != null">
					and bank_type = #{bankType}
				</if>
				<if test="bankName != null">
					and bank_name = #{bankName}
				</if>
				<if test="qrLogo != null">
					and qr_logo = #{qrLogo}
				</if>
				<if test="returnUrl != null">
					and return_url = #{returnUrl}
				</if>
				<if test="remark != null">
					and remark = #{remark}
				</if>
				<if test="bankId != null">
					and bank_id = #{bankId}   
				</if>
			</where>
	</select>
	
	
	<select id="findByClientId"  parameterType="java.lang.String" resultMap="clientResultMap">
		select * from cb_client where client_id=#{clientId}
	</select>
	
</mapper>

