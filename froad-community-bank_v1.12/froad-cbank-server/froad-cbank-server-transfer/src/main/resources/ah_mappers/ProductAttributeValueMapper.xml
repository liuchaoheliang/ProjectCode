<?xml version="1.0" encoding="UTF-8" ?>  
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  		 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.fft.persistent.api.ProductAttributeValueMapper">

	<resultMap type="ProductAttributeValue" id="productAttributeValueResultMap">

		<result property="productId" column="product_id" />
		<result property="productAttributeId" column="product_attribute_id" />
		<result property="value" column="value" />
	</resultMap>
	
	<!-- 插入 -->
	<insert id="saveProductAttributeValue" parameterType="ProductAttributeValue">
		insert into fft_product_attribute_value values
		(
			#{productId},#{productAttributeId},#{value}
		)
	</insert>
</mapper>