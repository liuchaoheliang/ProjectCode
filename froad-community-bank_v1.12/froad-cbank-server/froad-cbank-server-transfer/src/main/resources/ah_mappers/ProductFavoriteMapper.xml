<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.db.ahui.mappers.ProductFavoriteMapper">

    <resultMap type="ProductFavorite" id="productFavoriteResultMap">
        <id property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

        <result property="productId" column="product_id"/>
        <result property="memberCode" column="member_code"/>
    	<result property="clientId" column="client_id"/>
        <result property="dataState" column="data_state" typeHandler="com.froad.db.extend.EnumTypeHandler"/>
    	<result property="outletId" column="outlet_id"/>
    </resultMap>

    <!-- 插入 -->
    <insert id="saveProductFavorite" parameterType="ProductFavorite" useGeneratedKeys="true" keyProperty="id">
		insert into fft_product_favorite values
		(
			#{id},#{createTime},#{updateTime},#{productId},#{memberCode},#{clientId},30,#{outletId}
		)
	</insert>

    <!-- 更新 -->
    <update id="updateProductFavoriteById" parameterType="ProductFavorite">
        update fft_product_favorite set update_time = #{updateTime}
       	<if test="productId != null">
            ,product_id = #{productId}
        </if>
        <if test="memberCode != null">
            ,member_code = #{memberCode}
        </if>
        <if test="clientId != null">
            ,client_id = #{clientId}
        </if>
        <if test="dataState != null">
            ,data_state = #{dataState,typeHandler=com.froad.db.extend.EnumTypeHandler}
        </if>
        <if test="outletId != null">
            ,outlet_id = #{outletId}
        </if>
        where id = #{id}
    </update>

    <!-- 查询 -->
    <select id="selectProductFavoriteById" parameterType="java.lang.Long" resultMap="productFavoriteResultMap">
		select * from fft_product_favorite where id = #{id} 
	</select>

	<!-- 条件查询 -->
    <select id="selectByCondition" resultMap="productFavoriteResultMap">
    	select * from fft_product_favorite where data_state = 30
    </select>
    
    <select id="selectByPageCount" resultType="java.lang.Integer"  parameterType="com.froad.fft.persistent.bean.page.Page">
   		select count(0) from fft_product_favorite
   		<where>
   			<if test="pageFilter.filterEntity.id != null">
    			and id = #{pageFilter.filterEntity.id}
    		</if>
    		<if test="pageFilter.filterEntity.productId != null">
    			and product_id = #{pageFilter.filterEntity.productId}
    		</if>
    		<if test="pageFilter.filterEntity.memberCode != null">
    			and member_code = #{pageFilter.filterEntity.memberCode}
    		</if>
    		<if test="pageFilter.filterEntity.clientId != null">
    			and client_id = #{pageFilter.filterEntity.clientId}
    		</if>
    		<if test="pageFilter.filterEntity.dataState != null">
    			and data_state = #{pageFilter.filterEntity.dataState,typeHandler=com.froad.db.extend.EnumTypeHandler}
    		</if>
    		<if test="pageFilter.filterEntity.outletId != null">
    			and outlet_id = #{pageFilter.filterEntity.outletId}
    		</if>
   		</where>
   	</select>
   	<select id="selectByPage" parameterType="com.froad.fft.persistent.bean.page.Page"  resultMap="productFavoriteResultMap">
   		select * from fft_product_favorite
   		<where>
   			<if test="pageFilter.filterEntity.id != null">
    			and id = #{pageFilter.filterEntity.id}
    		</if>
    		<if test="pageFilter.filterEntity.productId != null">
    			and product_id = #{pageFilter.filterEntity.productId}
    		</if>
    		<if test="pageFilter.filterEntity.memberCode != null">
    			and member_code = #{pageFilter.filterEntity.memberCode}
    		</if>
    		<if test="pageFilter.filterEntity.clientId != null">
    			and client_id = #{pageFilter.filterEntity.clientId}
    		</if>
    		<if test="pageFilter.filterEntity.dataState != null">
    			and data_state = #{pageFilter.filterEntity.dataState,typeHandler=com.froad.db.extend.EnumTypeHandler}
    		</if>
    		<if test="pageFilter.filterEntity.outletId != null">
    			and outlet_id = #{pageFilter.filterEntity.outletId}
    		</if>
   		</where>
   		<!-- 排序 -->
        <if test="order != null">
            <if test="order.property != null and order.direction != null">
                order by ${order.property} ${order.direction}
            </if>
        </if>
   	</select>
</mapper>