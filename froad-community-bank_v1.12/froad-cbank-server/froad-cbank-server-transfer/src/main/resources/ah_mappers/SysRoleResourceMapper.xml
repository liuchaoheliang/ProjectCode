<?xml version="1.0" encoding="UTF-8" ?>  
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  		 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.fft.persistent.api.SysRoleResourceMapper">

	<resultMap type="SysRoleResource" id="sysRoleResourceResultMap">
		<result property="roleId" column="role_id" />
		<result property="resourceId" column="resource_id" />
	</resultMap>

	<!-- 插入 -->
	<insert id="saveSysRoleResource" parameterType="SysRoleResource">
		insert into fft_sys_role_resource values
		(
		#{roleId},#{resourceId}
		)
	</insert>
	<!-- 删除 -->
	<delete id="deleteSysRoleResource" parameterType="SysRoleResource">
		delete from fft_sys_role_resource
		where role_id=#{roleId} and resource_id=#{resourceId}
	</delete>
	
	<!-- 根据角色ID查询 -->
	<select id="selectSysRoleResourceByRoleId" parameterType="java.lang.Long" resultMap="sysRoleResourceResultMap">
		select * from fft_sys_role_resource where role_id = #{roleId}
	</select>
	
	<!-- 根据角色ID查询 -->
	<select id="selectAllSysRoleResource" resultMap="sysRoleResourceResultMap">
		select * from fft_sys_role_resource
	</select>

</mapper>