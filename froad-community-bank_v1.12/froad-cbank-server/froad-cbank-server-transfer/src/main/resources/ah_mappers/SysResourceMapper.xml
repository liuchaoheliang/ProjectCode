<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.db.ahui.mappers.SysResourceMapper">

    <resultMap type="SysResource" id="sysResourceResultMap">
        <id property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="code" column="code"/>
        <result property="url" column="url"/>
        <result property="type" column="type" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
        <result property="parentId" column="parent_id"/>
        <result property="treePath" column="tree_path"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="isSystem" column="is_system"/>
        <result property="description" column="description"/>
        <result property="orderValue" column="order_value"/>
        <result property="clientId" column="client_id"/>
    </resultMap>

    <!-- 插入 -->
    <insert id="saveSysResource" parameterType="SysResource" useGeneratedKeys="true" keyProperty="id">
		insert into fft_sys_resource values
		(
			#{id},#{createTime},#{updateTime},#{name},#{icon},
			#{code},#{url},#{type,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},#{parentId},
			#{treePath},#{isEnabled},#{isSystem},#{orderValue},#{clientId},#{description}
		)
	</insert>

    <!-- 更新 -->
    <update id="updateSysResourceById" parameterType="SysResource">
        update fft_sys_resource set update_time = #{updateTime}
        <if test="name != null">
            ,name = #{name}
        </if>
        <if test="icon != null">
            ,icon = #{icon}
        </if>
        <if test="code != null">
            ,code = #{code}
        </if>
        <if test="url != null">
            ,url = #{url}
        </if>
        <if test="type != null">
            ,type = #{type,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}
        </if>
        <if test="parentId != null">
            ,parent_id = #{parentId}
        </if>
        <if test="treePath != null">
            ,tree_path = #{treePath}
        </if>
        <if test="isEnabled != null">
            ,is_enabled = #{isEnabled}
        </if>
        <if test="isSystem != null">
            ,is_system = #{isSystem}
        </if>
        <if test="description != null">
            ,description = #{description}
        </if>
        <if test="orderValue != null">
            ,order_value = #{orderValue}
        </if>
        <if test="clientId != null">
            ,client_id = #{clientId}
        </if>
        where id = #{id}
    </update>

    <!-- 查询 -->
    <select id="selectSysResourceById" parameterType="java.lang.Long" resultMap="sysResourceResultMap">
		select * from fft_sys_resource where id = #{id}
	</select>

    <!-- 查询所有 -->
    <select id="selectAllSysResource" resultMap="sysResourceResultMap">
		select * from fft_sys_resource
	</select>

    <!-- 查询所有顶级资源 -->
    <select id="selectRootSysResourceList" resultMap="sysResourceResultMap">
		select * from fft_sys_resource where parent_id is null
	</select>

    <!--  根据clientID 查询 -->
    <select id="selectSysResourceByClientId" parameterType="java.lang.Long" resultMap="sysResourceResultMap">
		select * from fft_sys_resource where client_id = #{clientId}
	</select>

    <!-- 分页查询 -->
    <select id="selectSysResourceByPage" parameterType="com.froad.fft.persistent.bean.page.Page" resultMap="sysResourceResultMap">
        <![CDATA[
			select * from fft_sys_resource 
		]]>

        <!-- 条件 -->
        <if test="pageFilter != null">
            <where>
                <if test="pageFilter.filterEntity != null">
                    <if test="pageFilter.filterEntity.name != null">
                        and name like CONCAT('%',#{pageFilter.filterEntity.name},'%' )
                    </if>
                    <if test="pageFilter.filterEntity.code != null">
                        and code=#{pageFilter.filterEntity.code}
                    </if>
                    <if test="pageFilter.filterEntity.url != null">
                        and url like CONCAT('%',#{pageFilter.filterEntity.url},'%' )
                    </if>
                    <if test="pageFilter.filterEntity.type != null">
                        and type = #{pageFilter.filterEntity.type,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}
                    </if>
                    <if test="pageFilter.filterEntity.isEnabled != null">
                        and is_enabled=#{pageFilter.filterEntity.isEnabled}
                    </if>
                    <if test="pageFilter.filterEntity.clientId != null">
                        and client_id=#{pageFilter.filterEntity.clientId}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId != 0">
                        and parent_id = #{pageFilter.filterEntity.parentId}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId == 0">
                        and parent_id is null
                    </if>

                </if>
                <!-- 时间段条件 -->
                <if test="pageFilter.property != null and pageFilter.startTime != null">
                    <![CDATA[
					 and ${pageFilter.property} >= #{pageFilter.startTime}
					]]>
                </if>
                <if test="pageFilter.property != null and pageFilter.endTime != null">
                    <![CDATA[
					 and ${pageFilter.property} <= #{pageFilter.endTime}
					]]>
                </if>
            </where>
        </if>

        <!-- 排序 -->
        <if test="order != null">
            <if test="order.property != null and order.direction != null">
                order by ${order.property} ${order.direction}
            </if>
        </if>

    </select>

    <!-- 分页总数 -->
    <select id="selectSysResourceByPageCount" parameterType="com.froad.fft.persistent.bean.page.Page" resultType="java.lang.Integer">
        <![CDATA[
			select count(0) from fft_sys_resource 
		]]>

        <!-- 条件 -->
        <if test="pageFilter != null">
            <where>
                <if test="pageFilter.filterEntity != null">
                    <if test="pageFilter.filterEntity.name != null">
                        and name like CONCAT('%',#{pageFilter.filterEntity.name},'%' )
                    </if>
                    <if test="pageFilter.filterEntity.code != null">
                        and code=#{pageFilter.filterEntity.code}
                    </if>
                    <if test="pageFilter.filterEntity.url != null">
                        and url like CONCAT('%',#{pageFilter.filterEntity.url},'%' )
                    </if>
                    <if test="pageFilter.filterEntity.type != null">
                        and type = #{pageFilter.filterEntity.type,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler}
                    </if>
                    <if test="pageFilter.filterEntity.isEnabled != null">
                        and is_enabled=#{pageFilter.filterEntity.isEnabled}
                    </if>
                    <if test="pageFilter.filterEntity.clientId != null">
                        and client_id=#{pageFilter.filterEntity.clientId}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId != 0">
                        and parent_id = #{pageFilter.filterEntity.parentId}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId == 0">
                        and parent_id is null
                    </if>
                </if>
                <!-- 时间段条件 -->
                <if test="pageFilter.property != null and pageFilter.startTime != null">
                    <![CDATA[
					 and ${pageFilter.property} >= #{pageFilter.startTime}
					]]>
                </if>
                <if test="pageFilter.property != null and pageFilter.endTime != null">
                    <![CDATA[
					 and ${pageFilter.property} <= #{pageFilter.endTime}
					]]>
                </if>
            </where>
        </if>

        <!-- 排序 -->
        <if test="order != null">
            <if test="order.property != null and order.direction != null">
                order by ${order.property} ${order.direction}
            </if>
        </if>

    </select>


    <!-- 另个一种方式 -->
    <sql id="Page_Where_Clause">
        <!--
            mysql ：LIKE CONCAT('%',#{empname},'%' ) 或者 LIKE CONCAT('%',‘${empname}’,'%' )
            oracle：LIKE '%'||#{empname}||'%'
         -->
        <where>
            <foreach collection="filters" item="filtersTemp">
                <choose>
                    <when test="filtersTemp.operator == 'eq' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'ne' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'gt' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'lt' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'ge' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'le' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'like' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value}
                    </when>
                    <when test="filtersTemp.operator == 'isNull' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode}
                    </when>
                    <when test="filtersTemp.operator == 'isNotNull' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode}
                    </when>
                    <when test="filtersTemp.operator == 'bt' ">
                        <if test="filtersTemp.value !=null and filtersTemp.value2 != null">
                            and ${filtersTemp.property} ${filtersTemp.sqlCode} #{filtersTemp.value} and #{filtersTemp.value2}
                        </if>
                    </when>
                    <when test="filtersTemp.operator == 'in' ">
                        and ${filtersTemp.property} ${filtersTemp.sqlCode}
                        <foreach collection="filtersTemp.value" item="listItem" open="(" close=")" separator=",">
                            #{listItem}
                        </foreach>
                    </when>
                </choose>
            </foreach>
        </where>
    </sql>


</mapper>