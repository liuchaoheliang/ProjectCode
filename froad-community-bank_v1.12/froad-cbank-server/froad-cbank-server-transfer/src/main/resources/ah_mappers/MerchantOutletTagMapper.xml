<?xml version="1.0" encoding="UTF-8" ?>  
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  		 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.fft.persistent.api.MerchantOutletTagMapper">

	<resultMap type="MerchantOutletTag" id="merchantOutletTagResultMap">
		<id property="id" column="id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />

		<result property="merchantOutletId" column="merchant_outlet_id" />
		<result property="tagId" column="tag_id" />
		<result property="orderValue" column="order_value"/>
	</resultMap>
	
	<!-- 插入 -->
	<insert id="saveMerchantOutletTag" parameterType="MerchantOutletTag" useGeneratedKeys="true" keyProperty="id" >
		insert into fft_merchant_outlet_tag values
		(
			#{id},#{createTime},#{updateTime},#{merchantOutletId},#{tagId},#{orderValue}
		)
	</insert>
	
	<!-- 更新 -->
	<update id="updateMerchantOutletTagById" parameterType="MerchantOutletTag" >
		update fft_merchant_outlet_tag set update_time = #{updateTime}
		<if test="merchantOutletId != null">
			,merchant_outlet_id = #{merchantOutletId}
		</if>
		<if test="tagId != null">
			,tag_id = #{tagId}
		</if>	
		<if test="orderValue != null">
			,order_value = #{orderValue}
		</if>		
		where id = #{id}
	</update>
	
	<!-- 查询 -->
	<select id="selectMerchantOutletTagById" parameterType="java.lang.Long" resultMap="merchantOutletTagResultMap">
		select * from fft_merchant_outlet_tag where id = #{id}
	</select>
</mapper>