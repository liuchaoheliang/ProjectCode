<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.fft.persistent.api.ProductCategoryMapper">
    <resultMap type="ProductCategory" id="productCategoryResultMap">
        <id property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

        <result property="name" column="name"/>
        <result property="seoTitle" column="seo_title"/>
        <result property="seoKeywords" column="seo_keywords"/>
        <result property="seoDescription" column="seo_description"/>
        <result property="orderValue" column="order_value"/>
        <result property="treePath" column="tree_path"/>
        <result property="parentId" column="parent_id"/>
    </resultMap>

    <!-- 插入 -->
    <insert id="saveProductCategory" parameterType="ProductCategory" useGeneratedKeys="true" keyProperty="id">
		insert into fft_product_category values
		(
			#{id},#{createTime},#{updateTime},#{name},#{seoTitle},#{seoKeywords},#{seoDescription},#{orderValue},#{treePath},#{parentId}
		)
	</insert>

    <!-- 更新 -->
    <update id="updateProductCategoryById" parameterType="ProductCategory">
        update fft_product_category set update_time = #{updateTime}
        <if test="name != null">
            ,name = #{name}
        </if>
        <if test="seoTitle != null">
            ,seo_title = #{seoTitle}
        </if>
        <if test="seoKeywords != null">
            ,seo_keywords = #{seoKeywords}
        </if>
        <if test="seoDescription != null">
            ,seo_description = #{seoDescription}
        </if>
        <if test="orderValue != null">
            ,order_value = #{orderValue}
        </if>
        <if test="treePath != null">
            ,tree_path = #{treePath}
        </if>
        <if test="parentId != null">
            ,parent_id = #{parentId}
        </if>
        where id = #{id}
    </update>

    <!-- 查询 -->
    <select id="selectProductCategoryById" parameterType="java.lang.Long" resultMap="productCategoryResultMap">
		select * from fft_product_category where id = #{id}
	</select>

    <!-- 根据ID查询 --><!--	<select id="getProductCategoryById" parameterType="java.lang.Long" resultMap="productCategoryResultMap">--><!--		select * from fft_product_category where id = #{id}--><!--	</select>-->

    <!--分页查询 larry  -->
    <select id="findProductCategoryByPage" parameterType="com.froad.fft.persistent.bean.page.Page" resultMap="productCategoryResultMap">
        <![CDATA[
			select * from fft_product_category
		]]>

        <!-- 条件 -->
        <if test="pageFilter != null">
            <where>
                <if test="pageFilter.filterEntity != null">
                    <if test="pageFilter.filterEntity.name!= null">
                        and name like '%${pageFilter.filterEntity.name}%'
                    </if>
                    <if test="pageFilter.filterEntity.seoTitle!= null">
                        and seo_title like '%${pageFilter.filterEntity.seoTitle}%'
                    </if>
                    <if test="pageFilter.filterEntity.seoKeywords!= null">
                        and seo_keywords like '%${pageFilter.filterEntity.seoKeywords}%'
                    </if>
                    <if test="pageFilter.filterEntity.seoDescription!= null">
                        and seo_description = #{pageFilter.filterEntity.seoDescription}
                    </if>
                    <if test="pageFilter.filterEntity.orderValue!= null">
                        and order_value = #{pageFilter.filterEntity.orderValue}
                    </if>
                    <if test="pageFilter.filterEntity.treePath!= null">
                        and tree_path = #{pageFilter.filterEntity.treePath}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId != 0">
                        and parent_id = #{pageFilter.filterEntity.parentId}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId ==0">
                        and parent_id is null
                    </if>
                </if>
                <!-- 时间段条件 -->
                <if test="pageFilter.property != null and pageFilter.startTime != null">
                    <![CDATA[
					 and ${pageFilter.property} >= #{pageFilter.startTime}
					]]>
                </if>
                <if test="pageFilter.property != null and pageFilter.endTime != null">
                    <![CDATA[
					 and ${pageFilter.property} <= #{pageFilter.endTime}
					]]>
                </if>
            </where>
        </if>

        <!-- 排序 -->
        <if test="order != null">
            <if test="order.property != null and order.direction != null">
                order by ${order.property} ${order.direction}
            </if>
        </if>

    </select>
    <!--分页结束 larry  -->

    <!-- 分页总数 -->
    <select id="findProductCategoryByPageCount" parameterType="com.froad.fft.persistent.bean.page.Page" resultType="java.lang.Integer">
        <![CDATA[
			select count(0) from fft_product_category
		]]>

        <!-- 条件 -->
        <if test="pageFilter != null">
            <where>
                <if test="pageFilter.filterEntity != null">
                    <if test="pageFilter.filterEntity.name!= null">
                        and name like '%${pageFilter.filterEntity.name}%'
                    </if>
                    <if test="pageFilter.filterEntity.seoTitle!= null">
                        and seo_title like '%${pageFilter.filterEntity.seoTitle}%'
                    </if>
                    <if test="pageFilter.filterEntity.seoKeywords!= null">
                        and seo_keywords like '%${pageFilter.filterEntity.seoKeywords}%'
                    </if>
                    <if test="pageFilter.filterEntity.seoDescription!= null">
                        and seo_description = #{pageFilter.filterEntity.seoDescription}
                    </if>
                    <if test="pageFilter.filterEntity.orderValue!= null">
                        and order_value = #{pageFilter.filterEntity.orderValue}
                    </if>
                    <if test="pageFilter.filterEntity.treePath!= null">
                        and tree_path = #{pageFilter.filterEntity.treePath}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId != 0">
                        and parent_id = #{pageFilter.filterEntity.parentId}
                    </if>
                    <if test="pageFilter.filterEntity.parentId!= null and pageFilter.filterEntity.parentId ==0">
                        and parent_id is null
                    </if>
                </if>
                <!-- 时间段条件 -->
                <if test="pageFilter.property != null and pageFilter.startTime != null">
                    <![CDATA[
					 and ${pageFilter.property} >= #{pageFilter.startTime}
					]]>
                </if>
                <if test="pageFilter.property != null and pageFilter.endTime != null">
                    <![CDATA[
					 and ${pageFilter.property} <= #{pageFilter.endTime}
					]]>
                </if>
            </where>
        </if>

    </select>
</mapper>