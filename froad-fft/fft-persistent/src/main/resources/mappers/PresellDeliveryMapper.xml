<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.froad.fft.persistent.api.PresellDeliveryMapper">

    <resultMap type="PresellDelivery" id="presellDeliveryResultMap">
        <id property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="telephone" column="telephone"/>
        <result property="businessTime" column="business_time"/>
        <result property="coordinate" column="coordinate"/>
        <result property="businessCircleId" column="business_circle_id"/>
        <result property="orderValue" column="order_value"/>
        <result property="dataState" column="data_state" typeHandler="com.froad.fft.persistent.extend.EnumTypeHandler"/>
        <result property="clientId" column="client_id"/>
        <result property="director" column="director"/>
    </resultMap>

    <!-- 插入 -->
    <insert id="savePresellDelivery" parameterType="PresellDelivery" useGeneratedKeys="true" keyProperty="id">
		insert into fft_presell_delivery values
		(
		#{id},#{createTime},#{updateTime},#{name},#{address},
		#{telephone},#{businessTime},#{coordinate},
		#{businessCircleId},#{orderValue},30,#{clientId},#{director}
		)
	</insert>

    <!-- 更新 -->
    <update id="updatePresellDeliveryById" parameterType="PresellDelivery">
        update fft_presell_delivery set update_time = #{updateTime}
        <if test="name != null">
            ,name = #{name}
        </if>
        <if test="address != null">
            ,address = #{address}
        </if>
        <if test="telephone != null">
            ,telephone = #{telephone}
        </if>
        <if test="businessTime != null">
            ,business_time = #{businessTime}
        </if>
        <if test="coordinate != null">
            ,coordinate = #{coordinate}
        </if>
        <if test="orderValue != null">
            ,order_value = #{orderValue}
        </if>
        <if test="dataState != null">
            ,data_state = #{dataState,typeHandler=com.froad.fft.persistent.extend.EnumTypeHandler}
        </if>
        <if test="businessCircleId != null">
            ,business_circle_id = #{businessCircleId}
        </if>
        <if test="clientId != null">
            ,client_id = #{clientId}
        </if>
        <if test="director != null">
            ,director = #{director}
        </if>
        where id = #{id}
    </update>

    <select id="selectPresellDeliveryById" parameterType="java.lang.Long" resultMap="presellDeliveryResultMap">
    		select * from fft_presell_delivery where id = #{id}
    </select>

    <select id="selectPresellDeliveryByPage" parameterType="com.froad.fft.persistent.bean.page.Page" resultMap="presellDeliveryResultMap">
        select * from fft_presell_delivery
        <if test="pageFilter != null">
            <where>
                <if test="pageFilter.filterEntity != null">
                    <if test="pageFilter.filterEntity.id!= null">
                        and id = #{pageFilter.filterEntity.id}
                    </if>
                    <if test="pageFilter.filterEntity.name!= null">
                        and name like '%${pageFilter.filterEntity.name}%'
                    </if>
                    <if test="pageFilter.filterEntity.businessCircleId!= null">
                        and business_circle_id = #{pageFilter.filterEntity.businessCircleId}
                    </if>
                    <if test="pageFilter.filterEntity.dataState!= null">
                        and data_state = #{pageFilter.filterEntity.dataState,typeHandler=com.froad.fft.persistent.extend.EnumTypeHandler}
                    </if>
                    <if test="pageFilter.filterEntity.clientId!= null">
                        and client_id = #{pageFilter.filterEntity.clientId}
                    </if>
                </if>

                <!-- 时间段条件 -->
                <if test="pageFilter.property != null and pageFilter.startTime != null">
                    <![CDATA[
					 and ${pageFilter.property} >= #{pageFilter.startTime}
					]]>
                </if>
                <if test="pageFilter.property != null and pageFilter.endTime != null">
                    <![CDATA[
					 and ${pageFilter.property} <= #{pageFilter.endTime}
					]]>
                </if>
            </where>
        </if>
        <!-- 排序 -->
        <if test="order != null">
            <if test="order.property != null and order.direction != null">
                order by ${order.property} ${order.direction}
            </if>
        </if>
    </select>


    <select id="selectPresellDeliveryByPageCount" parameterType="com.froad.fft.persistent.bean.page.Page" resultType="java.lang.Integer">
        select count(*) from fft_presell_delivery
        <if test="pageFilter != null">
            <where>
                <if test="pageFilter.filterEntity != null">
                    <if test="pageFilter.filterEntity.id!= null">
                        and id = #{pageFilter.filterEntity.id}
                    </if>
                    <if test="pageFilter.filterEntity.name!= null">
                        and name like '%${pageFilter.filterEntity.name}%'
                    </if>
                    <if test="pageFilter.filterEntity.businessCircleId!= null">
                        and business_circle_id = #{pageFilter.filterEntity.businessCircleId}
                    </if>
                    <if test="pageFilter.filterEntity.dataState!= null">
                        and data_state = #{pageFilter.filterEntity.dataState,typeHandler=com.froad.fft.persistent.extend.EnumTypeHandler}
                    </if>
                    <if test="pageFilter.filterEntity.clientId!= null">
                        and client_id = #{pageFilter.filterEntity.clientId}
                    </if>
                </if>

                <!-- 时间段条件 -->
                <if test="pageFilter.property != null and pageFilter.startTime != null">
                    <![CDATA[
					 and ${pageFilter.property} >= #{pageFilter.startTime}
					]]>
                </if>
                <if test="pageFilter.property != null and pageFilter.endTime != null">
                    <![CDATA[
					 and ${pageFilter.property} <= #{pageFilter.endTime}
					]]>
                </if>
            </where>
        </if>
    </select>
</mapper>