<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="buyers">
	
	<typeAlias alias="buyers" type="com.froad.CB.po.Buyers" />

	<resultMap class="buyers" id="buyersResult">
		<result property="id" column="id"/>
		<result property="buyerChannelList" column="id" select="buyerChannel.getBuyerChannelByBuyerId"/>
		<result property="userId" column="user_id"/>
		<result property="state" column="state"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
		<result property="remark" column="remark"/>
	</resultMap>
	
	<!-- 添加买家信息 -->
	<insert id="insert" parameterClass="buyers">
		<![CDATA[ 
				insert into buyers(id,user_id,state,create_time,update_time,remark) 
				values(#id#,#userId#,#state#,DATE_FORMAT(NOW(),"%Y-%m-%d|%H:%i:%s"),DATE_FORMAT(NOW(),"%Y-%m-%d|%H:%i:%s"),#remark#)
		]]>
			<selectKey keyProperty="id" resultClass="int">
				select last_insert_id() as id
			</selectKey>
	</insert>
	
	<!-- 更新买家信息  -->
	<update id="updateBuyersById" parameterClass="buyers" >
	    <![CDATA[ 
	    			update buyers a 
	    			set a.update_time = DATE_FORMAT(NOW(),"%Y-%m-%d|%H:%i:%s")
	    ]]>
		<dynamic>
		     <isNotEmpty prepend="," property="userId">
		         <![CDATA[  a.user_id = #userId# ]]>
		     </isNotEmpty> 
		     <isNotEmpty prepend="," property="state">
		         <![CDATA[  a.state = #state# ]]>
		     </isNotEmpty> 
		     <isNotEmpty prepend="," property="remark">
		         <![CDATA[  a.remark = #remark# ]]>
		      </isNotEmpty> 
		</dynamic>
		<![CDATA[ where a.id = #id# ]]>
	</update>
	
	<!-- 根据id物理删除买家信息 -->
	<delete id="deleteByPrimaryKey" parameterClass="buyers" >
	    <![CDATA[ 
    			delete from buyers where id = #id#
	     ]]>
	</delete>
	
	<!-- 根据id删除买家信息 -->
	<update id="deleteStateByPrimaryKey" parameterClass="buyers" >
	    <![CDATA[ 
    			update buyers a 
		     	set a.update_time = DATE_FORMAT(NOW(),"%Y-%m-%d|%H:%i:%s"),a.state = '50'
		     	where a.id = #id:INT#
	     ]]>
	</update>
	
	<!-- 根据userId查询买家信息 -->
	<select id="getBuyersByUserId" parameterClass="string" resultMap="buyersResult">
		select * from buyers a where a.user_id=#userId#
	</select>
	
	<!-- 根据主键编号查询买家信息 -->
	<select id="selectByPrimaryKey" parameterClass="java.lang.Integer" resultMap="buyersResult">
		select * from buyers a where a.id=#id#
	</select>
	
</sqlMap>